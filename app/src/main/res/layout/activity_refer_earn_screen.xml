<RelativeLayout android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/login_back"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:elevation="5dp"
        android:id="@+id/rlHeader"
        android:background="@color/Parrotgreen"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout android:id="@+id/header"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:tint="@color/white"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back" />
            <TextView
                android:id="@+id/header_title"
                android:text="Refer &amp; Earn"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="21dp"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/rlHeader"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <ImageView android:id="@+id/referimg"
                android:layout_width="match_parent"
                android:src="@drawable/refer"
                android:scaleType="fitXY"
                android:layout_height="200dp">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/textcolor"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:text="Refer Application Link"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/textcolor"
                android:layout_height="wrap_content"
                android:text="When Another User Uses Your app link, Your Friend  Will Get Exciting Credits in wallet" />
            <TextView
                android:id="@+id/usercode"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Refer Link" />

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Share With Friends And Family" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                app:contentPadding="5dp">
                <RelativeLayout
                    android:background="@drawable/back_edit_text"
                    android:id="@+id/referral_rl"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:text="My Referral Link(Click to Copy)"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:layout_alignParentTop="true"
                        android:textSize="16sp" />
                    <TextView android:id="@+id/edtcode"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:text="http://wininggator.signaturesoftware.org/"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/share_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:text="Share Invite Link"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:elevation="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/back_red"
                />

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="10dp"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:text="Terms And Condition Apply*" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>