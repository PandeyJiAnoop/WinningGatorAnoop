<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            tools:ignore="NewApi">
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/black">
                <ImageView
                    android:id="@+id/menuImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:tint="@color/white"
                    android:src="@drawable/ic_arrow_back" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@id/menuImg"
                    android:gravity="center_vertical"
                    android:text="Raise Add Request"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RadioGroup
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rdGroup"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center">
                <RadioButton  android:textColor="@color/white"
                    android:id="@+id/btc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="BTC"
                    android:checked="true"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton  android:textColor="@color/white"
                    android:id="@+id/bnb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="BNB"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton
                    android:id="@+id/eth"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="ETH"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton  android:textColor="@color/white"
                    android:id="@+id/usdt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="USDT"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                app:contentPadding="5dp">
                <RelativeLayout
                    android:id="@+id/referral_rl"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:text="Online Payment Link"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:layout_alignParentTop="true"
                        android:textSize="16sp" />
                    <androidx.appcompat.widget.AppCompatButton android:id="@+id/edtcode"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:backgroundTint="@color/red"
                        android:padding="11dp" android:textAllCaps="true"
                        android:text="Click Here" android:textStyle="bold"
                        android:textColor="@color/white" android:textColorLink="@color/white"
                        android:textSize="13sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:background="@color/white"
                android:id="@+id/image_qr"
                android:layout_width="match_parent"
                android:src="@drawable/logo"
                android:layout_marginTop="10dp"
                android:layout_height="250dp">
            </ImageView>
            <TextView android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:text="500.00"
                android:padding="5dp" android:id="@+id/price_tv"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:textSize="21sp" />
            <ImageView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:src="@drawable/pay_gatway"
                android:layout_marginTop="10dp"
                android:layout_height="100dp">
            </ImageView>
            <TextView
                android:id="@+id/url_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#0972C5"
                android:text="Upload Transaction Details"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:padding="10dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="*Transaction No./UTR"
                android:textColor="@color/white" />
            <EditText
                android:id="@+id/utr_et"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/background_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:hint="Enter  Number"
                android:textColorHint="@color/grey"
                android:singleLine="true" />
            <Button
                android:backgroundTint="@color/textcolor"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:text="SUBMIT"
                android:id="@+id/addButton"
                android:layout_height="50dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                app:contentPadding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Reminder:\n\n
1.Scan QR Code
\n\n
2.If you enter the displayed UPI account number for deposit, please pay attention to whether the entered UPI account number is correct. Deposited into the wrong account cannot be refund.
\n\n
3.After paying from the following payment optionï¼šPayTM,PhonePE,GooglePay,BHIM,etc.
\n\n
4.Important reminder: After completing the UPI transaction,please backfill Ref No./UTR No./Google Pay : UPI Transaction ID/Freecharge: Transaction ID (12digits). If you do not back fill UTR, 100% of the deposit transaction will fail. Please be sure to backfill"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:layout_alignParentTop="true"
                        android:textSize="16sp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>